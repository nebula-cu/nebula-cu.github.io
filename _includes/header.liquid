<style>
/* Adjusts spacing for the navbar links */
.navbar-nav .nav-item {
  margin: 0 5px; /* Adjusts spacing between nav items */
}

/* Ensure the height of the navbar is consistent */
.navbar {
  min-height: 80px; /* Set a minimum height */
  line-height: 1.5; /* Ensure text is well spaced */
  border: 0px;
}

/* Adjust the logo and icon sizes to scale proportionally */
.navbar-brand img {
  height: 70px; /* Adjust the height to make it larger */
  width: auto; /* Maintain aspect ratio */
  max-height: 100%; /* Prevent overflow */
}

/* Ensure parent container respects content size */
.navbar-brand {
  display: flex;
  align-items: center;
  gap: 15px; /* Space between elements */
}
.container {
    display: flex;
    align-items: center;
    justify-content: center;
}

/* Non-active button (btn-light) */
.nav-link.btn-light {
  background-color: white; /* Light greenish-gray */
  color: black !important;
  border: 1.5px solid black;
  transition: all 0.3s ease;
}

/* Hover or focus: btn-light takes on btn-dark characteristics */
/*
.nav-link.btn-light:focus {
  background-color: rgb(5, 28, 104);
  color: black;
  border: 1.5px solid black;
} */

.nav-link.btn-light:hover {
  background-color: rgb(5, 28, 104); /* Dark gray-blue */
  color: white !important;
  border: 1.5px solid black;
}

/* Active button (btn-dark) */
.nav-link.btn-dark {
  background-color: rgb(5, 28, 104); /* Dark gray-blue */
  color: white;
  border: 1.5px solid black;
  transition: all 0.3s ease;
}

/* Hover or focus: btn-dark takes on btn-light characteristics */
/* .nav-link.btn-dark:hover {
  background-color: rgb(204, 209, 205); /* Light greenish-gray
  color: black !important;
  border: 1.5px solid black;
} */
/* Ensure content starts after the navbar */
body {
  padding-top: 50px; /* Adjust this value based on your navbar height */
}

.navbar {
  min-height: 80px; /* Consistent navbar height */
}

/* Optional: Adjusts for small screens */
@media (max-width: 576px) {
  body {
    padding-top: 100px; /* Extra padding for smaller screens if needed */
  }
}

.btn-white {
  background-color: white;
  color: black;
  border: 1.5px solid black;
}
</style>

<header>
  {% comment %} rgb(71, 137, 218) {% endcomment %}
  <nav class="navbar navbar-expand fixed-top"
       role="navigation" style="background-color:rgb(36, 99, 162); padding: 0px; border-bottom: 2px solid black; opacity: 1;">
    <div class="container" style="max-width: 1100px; padding: 0px; height:80px; opacity:1;">

      <!-- Website Title with Nebula Logo and Columbia University Icon -->
      <span style="pointer-events: none; margin: 0 5px 5px 5px; padding: 0 5px; height: 60px; border: 2px black solid; border-radius: 8px; background-color: white;">
      <a class="align-items-center;"
         href="{{ site.baseurl }}/"
         style="gap: 10px; font-size: 1.5rem; font-weight: 600; height: 80px; margin-right=0px; padding=0px">

        <!-- Nebula Logo -->
        <img
          src="/assets/img/nebula-logo.png"
          alt="Nebula Logo"
          style="width: 40px; height:33px;">

        <!-- Columbia Icon -->
        <span class="title" style="font-size: 35px;">NEBULA @ CU</span>
        <img
          src="/assets/img/columbia-icon.png"
          alt="Columbia University Icon"
          style="width: 40px; height:40px;">
      </a>
      </span>
      <!-- Navbar Toggler for Mobile View -->
      <button
        class="navbar-toggler"
        type="button"
        data-bs-toggle="collapse"
        data-bs-target="#navbarSupportedContent"
        aria-controls="navbarSupportedContent"
        aria-expanded="false"
        aria-label="Toggle navigation"
      >
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav ms-auto mb-lg-0">
          <li class="nav-item me-3">
            <a href="#about" class="nav-link btn btn-light" id="nav-about">About</a>
          </li>
          <li class="nav-item me-3">
            <a href="#team" class="nav-link btn btn-light" id="nav-team">Team</a>
          </li>
          <li class="nav-item me-3">
            <a href="#projects" class="nav-link btn btn-light" id="nav-projects">Projects</a>
          </li>
          <li class="nav-item me-3">
            <a href="#publications" class="nav-link btn btn-light" id="nav-publications">Publications</a>
          </li>
          <!-- Social Media Icons -->
          <li class="nav-item d-flex align-items-center">
            <div class="nav-item social-icons d-flex">
              {% if site.github_username %}
                <a href="https://github.com/{{ site.github_username }}" title="GitHub" class="nav-link ms-2"><i class="fa-brands fa-github fa-lg"></i></a>
              {% endif %}
            </div>
          </li>

        </ul>
      </div>
    </div>
  </nav>
</header>
