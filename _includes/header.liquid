<style>
/* Adjusts spacing for the navbar links */
.navbar-nav .nav-item {
  margin: 0 5px; /* Adjusts spacing between nav items */
}

/* Ensure the height of the navbar is consistent */
.navbar {
  min-height: 80px; /* Set a minimum height */
  line-height: 1.5; /* Ensure text is well spaced */
}

/* Adjust the logo and icon sizes to scale proportionally */
.navbar-brand img {
  height: 70px; /* Adjust the height to make it larger */
  width: auto; /* Maintain aspect ratio */
  max-height: 100%; /* Prevent overflow */
}

/* Ensure parent container respects content size */
.navbar-brand {
  display: flex;
  align-items: center;
  gap: 15px; /* Space between elements */
}
.container {
    display: flex;
    align-items: center;
    justify-content: center;
}
</style>

<header>
  <nav class="navbar navbar-expand navbar-light navbar-top fixed-top" 
       role="navigation" style="background-color:rgb(204, 209, 205); padding: 0px;">
    <div class="container" style="max-width: 800px; padding: 0px; border-bottom: 2px solid black; height:80px;">

      <!-- Website Title with Nebula Logo and Columbia University Icon -->
      <a class="navbar-brand d-flex align-items-center;" 
         href="{{ site.baseurl }}/" 
         style="gap: 10px; font-size: 1.5rem; font-weight: 600; height: 80px; margin-right=0px; padding=0px">

        <!-- Nebula Logo -->
        <img 
          src="/assets/img/nebula-logo.png"
          alt="Nebula Logo"
          style="width: 40px; height:33px;">

        <!-- Columbia Icon -->
        <span class="title" style="font-size: 35px;">NEBULA @ CU</span>
        <img 
          src="/assets/img/columbia-icon.png" 
          alt="Columbia University Icon"
          style="width: 40px; height:40px;">
      </a>

      <!-- Navbar Toggler for Mobile View -->
      <button
        class="navbar-toggler"
        type="button"
        data-bs-toggle="collapse"
        data-bs-target="#navbarSupportedContent"
        aria-controls="navbarSupportedContent"
        aria-expanded="false"
        aria-label="Toggle navigation"
      >
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav ms-auto mb-lg-0">

          <!-- Dynamic About Button -->
          {% for page in site.pages %}
            {% if page.permalink == '/' %}
              {% assign about_title = "About" %}
            {% endif %}
          {% endfor %}
          <li class="nav-item me-3">
            <button 
              class="nav-link {% if page.url == '/' %}btn btn-dark{% else %}btn btn-light{% endif %}" 
              onclick="window.location.href='{{ '/' | relative_url }}'">
              {{- about_title }}
            </button>
          </li>

          <!-- Other Pages (Sorted by nav_order) -->
          {% assign sorted_pages = site.pages | sort: 'nav_order' %}
          {% for p in sorted_pages %}
            {% if p.nav and p.autogen == null %}
              {% assign parent_link = p.permalink | remove: 'index.html' %}
              <li class="nav-item me-3 {% if page.url contains parent_link %}active{% endif %}">
                {% if p.permalink contains '/blog/' %}
                  {% assign url = '/blog/' %}
                {% else %}
                  {% assign url = p.url %}
                {% endif %}
                <button 
                  class="nav-link {% if page.url contains parent_link %}btn btn-dark{% else %}btn btn-light{% endif %}" 
                  onclick="window.location.href='{{ url | relative_url }}'">
                  {{- p.title }}
                </button>
              </li>
            {% endif %}
          {% endfor %}

          <!-- Search Button (Optional) -->
          {% if site.search_enabled %}
            <li class="nav-item me-3">
              <button id="search-toggle" title="Search" onclick="openSearchModal()">
                <span class="nav-link">ctrl k <i class="ti ti-search"></i></span>
              </button>
            </li>
          {% endif %}

        </ul>
      </div>
    </div>
  </nav>
</header>