<script>
  // Smooth scroll behavior on nav link click with offset for navbar
  document.querySelectorAll('a[href^="#"]').forEach(anchor => {
    anchor.addEventListener('click', function (e) {
      e.preventDefault(); // Prevent default behavior of jumping to the section

      const targetSection = document.querySelector(this.getAttribute('href'));
      const offset = 80; // Adjust this value based on your navbar height
      const elementPosition = targetSection.getBoundingClientRect().top;
      const offsetPosition = elementPosition + window.pageYOffset - offset;

      // Scroll smoothly to the section without manually changing the active nav state
      window.scrollTo({
        top: offsetPosition,
        behavior: 'smooth'
      });
    });
  });

  // Function to update active navigation based on scroll position
  function updateActiveNav() {
    const sections = document.querySelectorAll('.section'); // Sections to monitor
    const navLinks = document.querySelectorAll('.navbar-nav .nav-link'); // Nav links to highlight
    const offset = 80; // Adjust this value based on your navbar height
    const scrollPosition = window.pageYOffset + offset;

    let currentSection = '';

    // Loop through each section to determine which is in view
    sections.forEach(section => {
      const sectionTop = section.offsetTop - offset; // Account for navbar height
      const sectionBottom = sectionTop + section.offsetHeight;

      // Check if the scroll position is within the section bounds
      if (scrollPosition >= sectionTop && scrollPosition < sectionBottom) {
        currentSection = section.getAttribute('id');
      }
    });

    // If no section is detected (e.g., above the first section), set to the first section
    if (!currentSection) {
      currentSection = sections[0].getAttribute('id');
    }

    // Update navigation links to reflect the current section
    navLinks.forEach(link => {
      link.classList.remove('btn-dark'); // Remove active class from all links
      link.classList.add('btn-light');   // Add default class to all links
      if (link.getAttribute('href') === `#${currentSection}`) {
        link.classList.remove('btn-light'); // Highlight the active section
        link.classList.add('btn-dark');
      }
    });
  }

  // Event listener for scroll events to trigger active nav link updates
  window.addEventListener('scroll', updateActiveNav);

  // Handle initial load, page refresh, and window resizing
  window.addEventListener('DOMContentLoaded', updateActiveNav);
  window.addEventListener('resize', updateActiveNav);
</script>