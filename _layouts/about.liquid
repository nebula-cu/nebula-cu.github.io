---
layout: default
---
<div class="post">
  <header class="post-header">
    {% comment %} <h1 class="post-title">
        {{ site.title }}
    </h1> {% endcomment %}
  </header>

  <article>
    <div class="card w-100 mb-4">
      <div class="card-content">
        <div class="card-body">
          <h2 class="card-title">About Us</h2>
          <p class="card-text">
            Lorem ipsum dolor sit amet, consectetur adipiscing elit.
            Sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.
            Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat.
            Duis aute irure dolor in reprehenderit in voluptate velit esse cillum dolore eu fugiat nulla pariatur.
            Excepteur sint occaecat cupidatat non proident, sunt in culpa qui officia deserunt mollit anim id est laborum.
            <img 
            class="img-fluid w-50" 
            src="/assets/img/prof_pic.jpg" 
            alt="Profile Picture">
            
            Lorem ipsum dolor sit amet, consectetur adipiscing elit.
            Sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.
            Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat.

          </p>
        </div>

      </div>
    </div>

    <div class="clearfix">{{ content }}</div>

    <!-- News -->
    {% if page.news and site.announcements.enabled %}
      <div class="card w-100 mt-4">
        <div class="card-header" style="padding-top: 10px; padding-bottom:10px">
          <h2 class="card-title">Latest News</h2>
        </div>
        <div class="card-body">
          <div class="news-list">
            {% include news.liquid limit=true %}
          </div>
        </div>
        {% comment %} <div class="card-footer">
          <a href="{{ '/news/' | relative_url }}" class="btn btn-primary">View All News</a>
        </div> {% endcomment %}
      </div>
      {% endif %}

    <!-- Selected papers -->
    {% if page.selected_papers %}
      <div class="card w-100 mt-4">
        <div class="card-header" style="padding-top: 10px; padding-bottom: 10px;">
          <h2 class="card-title">
            <a href="{{ '/publications/' | relative_url }}" style="color: inherit;">Selected Publications</a>
          </h2>
        </div>
        <div class="card-body">
          <div class="publications-list">
            {% include selected_papers.liquid %}
          </div>
        </div>
        {% comment %}
        <div class="card-footer">
          <a href="{{ '/publications/' | relative_url }}" class="btn btn-light-primary">View All Publications</a>
        </div>
        {% endcomment %}
      </div>
    {% endif %}


    <section id="about-profiles">
      <div class="row match-height">
        <div class="col-12 mt-3 mb-1">
          <h4 class="section-title text-uppercase">Our Team</h4>
        </div>
      </div>
    
      <div class="row match-height">
        <div class="col-12">
          <div class="card-group">
            {% assign total_profiles = site.members | size %}
            {% assign members_per_row = 2 %} <!-- Always 2 members per row -->
            {% assign num_rows = total_profiles | divided_by: 2 %}
    
            {% for profile in site.members %}
              {% assign current_index = forloop.index0 %}
              {% assign is_new_row = current_index | modulo: members_per_row %}
    
              <!-- Start a new row every 2 profiles -->
              {% if current_index != 0 and is_new_row == 0 %}
                </div><div class="card-group mt-4">
              {% endif %}
    
              <!-- Profile Card -->
              <div class="card">
                <div class="card-content">
                  {% if profile.photo %}
                    <img 
                      class="card-img-top img-fluid rounded-circle" 
                      src="/assets/img/{{ profile.photo }}" 
                      alt="Photo of {{ profile.givenname }} {{ profile.surname }}" 
                    />
                  {% endif %}
    
                  <div class="card-body">
                    <h4 class="card-title">{{ profile.givenname }} {{ profile.surname }}</h4>
                    <p class="card-text">
                      <strong>Role:</strong> {{ profile.role }}
                    </p>
                    <div class="more-info">
                      {{ profile.more_info }}
                    </div>
                  </div>
                </div>
              </div>
            {% endfor %}
          </div>
        </div>
      </div>
    </section>

    <!-- Social -->
    {% if page.social %}
      <div class="social">
        <div class="contact-icons">{% include social.liquid %}</div>

        <div class="contact-note">{{ site.contact_note }}</div>
      </div>
    {% endif %}

    {% if site.newsletter.enabled and site.footer_fixed %}
      {% include scripts/newsletter.liquid center=true %}
    {% endif %}
  </article>
</div>
