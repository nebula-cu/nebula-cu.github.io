<script>
  document.querySelectorAll('a[href^="#"]').forEach(anchor => {
  anchor.addEventListener('click', function (e) {
    e.preventDefault(); // Prevent default anchor behavior

    const targetSection = document.querySelector(this.getAttribute('href'));
    const offset = 80; // Adjust this value based on your navbar height
    const elementPosition = targetSection.getBoundingClientRect().top;
    const offsetPosition = elementPosition + window.pageYOffset - offset;

    // Smooth scroll to the section
    window.scrollTo({
      top: offsetPosition,
      behavior: 'smooth'
    });
  });
});

// Function to update active navigation based on scroll position
function updateActiveNav() {
  const sections = document.querySelectorAll('.section'); // Add .section class to all your sections
  const navLinks = document.querySelectorAll('.navbar-nav .nav-link');
  const offset = 80; // Same offset to adjust for navbar height
  const scrollPosition = window.pageYOffset + offset;

  let activeSection = ''; // Variable to store current active section

  // Loop through each section to determine which is in view
  sections.forEach(section => {
    const sectionTop = section.offsetTop - offset; // Account for navbar height
    const sectionBottom = sectionTop + section.offsetHeight;

    // Check if scroll position is within the section
    if (scrollPosition >= sectionTop && scrollPosition < sectionBottom) {
      activeSection = section.getAttribute('id');
    }
  });

  // Update nav link highlighting based on current active section
  navLinks.forEach(link => {
    link.classList.remove('btn-dark');
    link.classList.add('btn-light');

    if (link.getAttribute('href') === `#${activeSection}`) {
      link.classList.remove('btn-light');
      link.classList.add('btn-dark');
    }
  });
}

// Listen for scroll events and run the function to update the active nav item
window.addEventListener('scroll', updateActiveNav);

// Trigger the active nav update on initial page load or refresh
window.addEventListener('DOMContentLoaded', updateActiveNav);

// Ensure correct highlighting on window resize
window.addEventListener('resize', updateActiveNav);
</script>
